<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
		<SpaRoot>/frontend-app</SpaRoot>
        
        <FrontendPath>..\frontend-app\</FrontendPath>
        <FrontendBuildPath>$(ProjectPath)build\</FrontendBuildPath>
        <ProjectStaticFilesPath>wwwroot\</ProjectStaticFilesPath>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Cataloguer.Database\Cataloguer.Database.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="serilog.aspnetcore" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Logs\" />
      <Folder Include="$(ProjectStaticFilesPath)" />
    </ItemGroup>
    
    <Target Name="CleanFolders" BeforeTargets="Build">
        <RemoveDir Directories="$(ProjectStaticFilesPath)" MSBuildRuntime="*" />
        <RemoveDir Directories="$(FrontendBuildPath)" MSBuildRuntime="*" />
        <MakeDir Directories="$(ProjectStaticFilesPath)" MSBuildRuntime="*"/>
    </Target>

	<Target Name="BuildFrontend" BeforeTargets="Build">
        <!--<Exec ConsoleToMSBuild="true" WorkingDirectory="$(FrontendPath)" Command="npm install" />-->
        <Exec ConsoleToMSBuild="true" WorkingDirectory="$(FrontendPath)" Command="npm run build" />
    </Target>

    <Target Name="CopyStaticFiles" AfterTargets="BuildFrontend">
        <Exec Command="./moveStaticFiles.sh" Condition="'$(OS)' != 'Windows_NT'" />
        <Exec Command="./moveStaticFiles.bat" Condition="'$(OS)' == 'Windows_NT'" />
        <!--<Exec Command="xcopy.exe /e /v ..\frontend-app\build\static\* wwwroot\static\*" />-->
        <!--<Exec Command="xcopy.exe ..\frontend-app\build\* wwwroot\*" />-->
    </Target>
</Project>
